<Window x:Class="IPTVChannelManager.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPTVChannelManager"
        mc:Ignorable="d"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        Title="Setting" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2">
            <TextBlock Text="Channel Groups:" Margin="4 2" TextAlignment="Right" VerticalAlignment="Center" Width="100"/>
            <TextBox Text="{Binding ChannelGroups, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center" TextWrapping="NoWrap" Width="300" Height="25" Margin="4 2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2">
            <TextBlock Text="Logo Template:" Margin="4 2" TextAlignment="Right" VerticalAlignment="Center" Width="100"/>
            <TextBox Text="{Binding LogoUrlTemplate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center" TextWrapping="NoWrap" Width="300" Height="25" Margin="4 2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2">
            <TextBlock Text="EPG Url:" Margin="4 2" TextAlignment="Right" VerticalAlignment="Center" Width="100"/>
            <TextBox Text="{Binding EpgUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center" TextWrapping="NoWrap" Width="300" Height="25" Margin="4 2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2">
            <TextBlock Text="Custom Host:" Margin="4 2" TextAlignment="Right" VerticalAlignment="Center" Width="100"/>
            <TextBox Text="{Binding CustomHost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center" TextWrapping="NoWrap" Width="300" Height="25" Margin="4 2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2">
            <TextBlock Text="Player Location:" Margin="4 2" TextAlignment="Right" VerticalAlignment="Center" Width="100"/>
            <TextBox Text="{Binding PlayerPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center" TextWrapping="NoWrap" Width="300" Height="25" Margin="4 2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4 2" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="80" Height="25" Margin="4 2"/>
            <Button Content="Close" Click="CloseButtonClick" Width="80" Height="25" Margin="4 2"/>
        </StackPanel>
    </StackPanel>
</Window>
